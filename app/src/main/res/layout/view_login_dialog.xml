    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/et_account"
        style="@style/AlignEditTextStyle"
        android:hint="input your account"/>

    <EditText
        android:id="@+id/et_password"
        style="@style/AlignEditTextStyle"
        android:hint="password"
        android:inputType="textPassword"/>


</LinearLayout>