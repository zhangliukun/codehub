<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/avatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        fresco:roundAsCircle="true"
        fresco:actualImageScaleType="focusCrop"
        fresco:placeholderImageScaleType="focusCrop"
        fresco:placeholderImage="@drawable/ic_account_circle_black_48dp"/>

    <TextView
        android:id="@+id/name_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatar"
        android:text="name:"/>

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/name_tip"
        android:layout_alignBaseline="@id/name_tip"/>

    <TextView
        android:id="@+id/email_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_tip"
        android:text="email:"/>

    <TextView
        android:id="@+id/email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/email_tip"
        android:layout_alignBaseline="@id/email_tip"/>


</RelativeLayout>