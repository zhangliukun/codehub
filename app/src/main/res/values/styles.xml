<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BasicTextViewTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AlignEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppWelcome" parent="android:Theme.Translucent.NoTitleBar.Fullscreen"/>

    <declare-styleable name="TimeAxisView">
        <attr name="axis_image_src" format="reference"/>
        <attr name="line_point">
            <enum name="both" value="0"/>
            <enum name="up" value="1"/>
            <enum name="down" value="2"/>
        </attr>
        <attr name="axis_image_mode">
            <enum name = "top" value="0"/>
            <enum name = "center" value="1"/>
            <enum name = "bottom" value="2"/>
        </attr>
        <attr name="line_color" format="color"/>
        <attr name="line_thinkness" format="dimension"/>
    </declare-styleable>

</resources>
